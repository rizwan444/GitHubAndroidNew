<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/AddedColorBG1"
    tools:context="com.example.rizwan444.das.MainActivity">

    <TextView
        android:id="@+id/txtV_loginperson"
        android:text="Not Logged IN"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Search"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Search"
        android:background="@color/AddedColorBtn1"
        android:layout_below="@+id/btn_LogOut"
         />

    <Button
        android:text="LOG IN"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_LogIn"
       android:layout_below="@+id/btn_Search"

        android:width="125dp"
        android:background="@color/AddedColorBtn1"/>

    <Button
        android:text="SIGN UP"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_SIGNUP"
        android:layout_below="@+id/btn_LogIn"
        android:layout_marginTop="30dp"
        android:width="125dp"
        android:background="@color/AddedColorBtn1"/>

    <Button
        android:text="Check"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Check"
        android:layout_width="200dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_SIGNUP"
        android:layout_marginTop="30dp"
        android:width="125dp"
        android:background="@color/AddedColorBtn1"/>

    <Button
        android:text="SHARED PEREFRENCES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/btn_SharedPreference"
        android:width="20dp"

        android:background="@color/AddedColorBtn1"/>
    <Button
        android:text="Fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Fragment"
        android:width="20dp"
        android:background="@color/AddedColorBtn1"

        android:layout_marginTop="430dp"/>
    <Button
        android:text="Single Frgmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_SingleFragment"
        android:width="20dp"
        android:background="@color/AddedColorBtn1"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/AddedColorBtn1"
        android:layout_marginLeft="270dp"
        android:id="@+id/btn_LogOut"/>

    <Button
        android:text="Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Refresh"
        android:background="@color/AddedColorBtn1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
